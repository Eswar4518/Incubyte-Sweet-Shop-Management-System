# Sweet Shop Frontend - Environment Variables Template
# Copy this file to .env and update with actual values

# Backend API Configuration
# Base URL for all API requests
# Example: http://localhost:5000 or https://api.example.com
VITE_API_URL=http://localhost:4000

# Application Environment
# Options: development, production, test
VITE_ENV=development

# Feature Flags
# Enable/disable specific features during development
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_LOGGING=true

# Application Configuration
# Application name shown in UI
VITE_APP_NAME=Sweet Shop

# Version
VITE_APP_VERSION=1.0.0

# JWT Configuration (for local storage key)
# Key used to store JWT token in browser localStorage
VITE_JWT_STORAGE_KEY=auth_token

# Note: All variables must be prefixed with VITE_ to be accessible in the frontend
